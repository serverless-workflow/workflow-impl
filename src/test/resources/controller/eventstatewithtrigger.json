{
  "name": "test-wf",
  "trigger-defs": [
    {
      "name": "test-trigger",
      "source": "testsource",
      "type": "testeventtype",
      "correlation-token": "testcorrelationtoken"
    }
  ],
  "states": [
    {
      "events": [
        {
          "event-expression": "trigger.equals('test-trigger')",
          "timeout": "testTimeout",
          "action-mode": "SEQUENTIAL",
          "actions": [
            {
              "function": {
                "name": "testFunction"
              },
              "timeout": 5,
              "retry": {
                "match": "testMatch",
                "retry-interval": 2,
                "max-retry": 10,
                "next-state": "testNextRetryState"
              }
            }
          ],
          "next-state": "testNextState"
        }
      ],
      "name": "test-state",
      "type": "EVENT",
      "start": true
    }
  ]
}